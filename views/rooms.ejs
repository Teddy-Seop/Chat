<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <style>
        #header{
            border: 1px solid black;
        }
        #contents{
            border: 1px solid black;
            float: left;
            width: 100%;
        }
        .rooms{
            border: 1px solid black;
        }
        .menu{
            float: left;
            padding: 10px;
            margin: 10px;
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <div id="header">
        <div id="roomMenu" class="menu" onclick="roomMenu()">
            Rooms
        </div>
        <div id="userMenu" class="menu" onclick="userMenu()">
            Users
        </div>
        <div id="friendsMenu" class="menu" onclick="friendsMenu()">
            Friends
        </div>
        <div id="logout" class="menu" onclick="logout()">
            logout
        </div>
    </div>
    <div id="contents">
        
    </div>
</body>
</html>

<script src="https://code.jquery.com/jquery-3.5.1.js" 
integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" 
crossorigin="anonymous"></script>
<script>
    window.onload = () => {
        //채팅방 목록 출력
        var rooms = `<%- rooms %>`;
        rooms = JSON.parse(rooms);
        for(var i=0; i<rooms.length; i++){
            var html = `<div class="rooms">참여인원 수 : ${rooms[i].cnt}   방 번호 : ${rooms[i].no}`;
            html += `<button onclick='join(${rooms[i].no})'>입장</button>`
            html += `</div>`;
            
            $('#contents').append(html);
        }
    }

    //채팅방 입장
    var join = (no) => {
        location.href = `/chat/${no}`;
    }

    //메뉴 이동
    var roomMenu = () => {
        location.href = '/rooms';
    }
    var userMenu = () => {
        location.href = '/users';
    }
    var friendsMenu = () => {
        location.href = '/friends';
    }
    var logout = () => {
        location.href = '/logout';
    }
</script>